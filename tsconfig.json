{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "paths": {
      "~/*": ["./src/*"]
    },
    "lib": [
      "ES2020"
    ],
    "incremental": true,
    "sourceMap": true,
    "stripInternal": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
    "src/**/*"
  ]
}
